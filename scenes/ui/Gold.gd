extends HBoxContainer

################################################################################
# Variables
################################################################################

export (int) var value: int = 0

onready var label: Label = $Label


################################################################################
# Interface
################################################################################

func set_value(n: int):
    value = n
    if n <= 0:
        label.text = "-"
    else:
        label.text = str(n)


################################################################################
# Life Cycle
################################################################################

func _ready():
    set_value(value)
